# Path to the SQLite database (defaults to ~/.gemini/obs.db)
OBS_DB_PATH=~/.gemini/obs.db

# Log level: debug | info | warn | error (default: info)
LOG_LEVEL=info

# Default cost alert threshold in USD per session (0 = disabled)
DEFAULT_BUDGET_USD=0

# Gemini model pricing overrides (USD per 1M tokens)
# Defaults match gemini-2.5-pro public pricing
# PRICE_INPUT_PER_1M=0.075
# PRICE_OUTPUT_PER_1M=0.30
# PRICE_FLASH_INPUT_PER_1M=0.0375
# PRICE_FLASH_OUTPUT_PER_1M=0.15
